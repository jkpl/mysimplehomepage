bg_color = #eee
fg_color = #888
h_bg_color = #335
h_fg_color = #fff
h_border_color = h_bg_color
c_bg_color = #fff
c_fg_color = #444
c_border_color = #ccc
f_bg_color = bg_color
f_fg_color = fg_color
l_fg_color = #d14
l_bg_color = transparent
l_hover_bg_color = l_fg_color
l_hover_fg_color = #fff
code_bg = #e5e5e5
code_border = #d0d0d0
code_block_border = #35a
area_width = 45em

border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

box-shadow()
  -moz-box-shadow arguments
  -webkit-box-shadow arguments
  box-shadow arguments

@media (min-width: 481px)
  .box
    max-width area_width
    position relative
    margin 10px auto

body
  background-color bg_color
  color fg_color

@media (max-width: 481px)
  body
    margin 0

pre
  margin 1em 1em
  padding 0.2em 0.2em
  border-left 4px solid code_block_border

code
  background-color code_bg
  border 1px solid code_border
  border-radius 2px
  padding 0 0.4em

pre code
  background-color transparent
  border 0px solid code_border

a
  color l_fg_color
  background-color l_bg_color
  text-decoration underline
  &:hover
    color l_hover_fg_color
    background-color l_hover_bg_color

.avatar
  float right
  border 2px solid h_bg_color
  padding 0
  border-radius 5px

@media (max-width: 480px)
  .avatar
    display none

#title
  margin 0
  font-size xx-large
  font-family sans-serif

#titlea
  color h_fg_color
  text-decoration none
  background-color transparent
  &:hover
    text-decoration underline

#head
  background-color h_bg_color
  linear-gradient h_bg_color h_bg_color
  color h_fg_color
  padding 0.3em 2em 0.3em 2em
  text-align right
  margin 0

@media (min-width: 481px)
  #head
    border-radius 0.8em 0.8em 0 0

#content
  font-size 1.1em
  background-color c_bg_color
  color c_fg_color
  margin 0
  border 1px solid c_border_color
  border-top 0

@media (max-width: 480px)
  #content
    padding: 0.5em
@media (min-width: 481px)
  #content
    padding 0.5em 2em
    border-radius 0 0 0.8em 0.8em

#foot
  background-color f_bg_color
  color f_fg_color
  padding 0.1em 2em 0.1em 2em
  font-size medium
  text-align right
